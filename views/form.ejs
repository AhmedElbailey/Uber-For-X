<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <title>Sign Up | Log In</title>
    <link rel="stylesheet" href="/css/logging.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <div class="wrapper">
      <div class="title-text">
        <div class="title login">Account</div>
        <div class="title signup">Account</div>
      </div>
      <div class="form-container">
        <div class="slide-controls">
          <input type="radio" name="slide" id="citizen" />
          <input type="radio" name="slide" id="cop" />
          <label
            for="citizen"
            class="slide citizen <%= job=='citizen'?'selected':null %>"
            >Citizen</label
          >
          <label for="cop" class="slide cop <%= job=='cop'?'selected':null %>"
            >Cop</label
          >
          <div class="job-slider-tab"></div>
        </div>
        <div class="slide-controls log-slide-controls">
          <input type="radio" name="slide" id="login" checked />
          <input type="radio" name="slide" id="signup" />
          <label
            for="login"
            class="slide login <%= state==='login'?'selected':null%>"
            >Login</label
          >
          <label
            for="signup"
            class="slide signup <%= state==='signup'?'selected':null%>"
            >Signup</label
          >
          <div class="log-slider-tab"></div>
        </div>
        <% if(errorMessage){ %>
        <div class="errMsgContainer">
          <p><%= errorMessage %></p>
        </div>
        <% } %>
        <div class="form-inner">
          <form action="/login/citizen" method="post" class="login">
            <div class="field">
              <input
                type="text"
                name="email"
                placeholder="Email Address"
                required
              />
            </div>
            <div class="field">
              <input
                type="password"
                name="password"
                placeholder="Password"
                required
              />
            </div>
            <div hidden class="field">
              <input
                hidden
                type="text"
                name="CSRFToken"
                value="<%= CSRFToken %>"
              />
            </div>
            <div class="pass-link">
              <a href="reset">Reset password?</a>
            </div>
            <div class="field" hidden>
              <input class="coordsInput" type="text" name="coords" value="" />
            </div>
            <div class="field btn">
              <div class="btn-layer"></div>
              <input type="submit" value="Login" />
            </div>
            <div class="signup-link">
              Don't Have Account? <a href="">Create A New</a>
            </div>
          </form>
          <form action="/signup/citizen" method="post" class="signup">
            <div class="field">
              <input
                type="text"
                name="userName"
                placeholder="Username"
                required
              />
            </div>
            <div class="field">
              <input
                type="text"
                name="phoneNumber"
                placeholder="phone Number"
                required
              />
            </div>
            <div class="field">
              <input
                type="text"
                name="email"
                placeholder="Email Address"
                required
              />
            </div>
            <div class="field">
              <input
                type="password"
                name="password"
                placeholder="Password"
                required
              />
            </div>
            <div class="field">
              <input
                type="password"
                name="confirmPassword"
                placeholder="Confirm Password"
                required
              />
            </div>
            <div hidden class="field">
              <input
                hidden
                type="text"
                name="CSRFToken"
                value="<%= CSRFToken %>"
              />
            </div>
            <div class="field" hidden>
              <input class="coordsInput" type="text" name="coords" value="" />
            </div>
            <div class="field btn">
              <div class="btn-layer"></div>
              <input type="submit" value="SignUp" />
            </div>
          </form>
          <form action="/login/cop" method="post" class="cop-login">
            <div class="field">
              <input type="text" name="copId" placeholder="Cop ID" required />
            </div>
            <div class="field" hidden>
              <input class="coordsInput" type="text" name="coords" value="" />
            </div>
            <div hidden class="field">
              <input
                hidden
                type="text"
                name="CSRFToken"
                value="<%= CSRFToken %>"
              />
            </div>
            <div class="field btn">
              <div class="btn-layer"></div>
              <input type="submit" value="Login" />
            </div>
          </form>
        </div>
      </div>
    </div>
    <script src="/js/logging.js"></script>
  </body>
</html>
